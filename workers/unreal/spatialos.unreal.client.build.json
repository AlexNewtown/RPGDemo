{
  "tasks": [
    {
      "name": "Codegen",
      "steps": [
        {
          "name": "Dependencies",
          "arguments": [
            "worker_package",
            "unpack"
          ]
        },
        {
          "name": "Add project specific includes and macros to UnrealSdk UCLASS files.",
          "arguments": [
            "invoke",
            "unreal",
            "add_project_includes",
            "RpgDemo",
            "Source/RpgDemo/SpatialOS/uclasses/**/*.h",
            "Source/RpgDemo/SpatialOS/uclasses/**/*.cpp"
          ]
        },
        {
          "name": "Setup build script",
          "command": "cmd",
          "arguments": [
            "/c",
            "copy /y .\\Source\\RpgDemo\\SpatialOS\\SpatialOSModule.Build.cs Source\\RpgDemo"
          ]
        },
        {
          "name": "C++ standard library",
          "arguments": [
            "process_schema",
            "generate",
            "--cachePath=.spatialos/schema_codegen_cache_std",
            "--output=Source/RpgDemo/Improbable/Generated/cpp/Std",
            "--language=cpp_unreal",
            "--input=../../build/dependencies/schema/WorkerSdkSchema"
          ]
        },
        {
          "name": "C++",
          "arguments": [
            "process_schema",
            "generate",
            "--cachePath=.spatialos/schema_codegen_cache_usr",
            "--output=Source/RpgDemo/Improbable/Generated/cpp/Usr",
            "--language=cpp_unreal",
            "--input=../../schema"
          ]
        },
        {
          "name": "Json AST standard library",
          "arguments": [
            "process_schema",
            "generate",
            "--cachePath=.spatialos/schema_codegen_cache_json_std",
            "--output=Source/RpgDemo/Improbable/Generated/json/Std",
            "--language=ast_json",
            "--input=../../build/dependencies/schema/WorkerSdkSchema"
          ]
        },
        {
          "name": "Json AST",
          "arguments": [
            "process_schema",
            "generate",
            "--cachePath=.spatialos/schema_codegen_cache_json_usr",
            "--output=Source/RpgDemo/Improbable/Generated/json/Usr",
            "--language=ast_json",
            "--input=../../schema",
            "--repository=../../build/dependencies/schema"
          ]
        },
        {
          "name": "Unreal Code Generation",
          "description": "Generates Unreal classes.",
          "command": ".spatialos/bin/CodeGenerator.exe",
          "arguments": [
            "--json-dir=Source/RpgDemo/Improbable/Generated/json",
            "--unreal-output-dir=Source/RpgDemo/Improbable/Generated/cpp/unreal",
            "--unreal-project-name=RpgDemo"
          ]
        }
      ]
    },
    {
      "name": "Build",
      "steps": [
        {
          "name": "Codegen",
          "arguments": [
            "invoke-task",
            "Codegen"
          ]
        },
        {
          "name": "Compile Editor",
          "arguments": [
            "invoke",
            "unreal",
            "build",
            "--target=Editor",
            "--configuration=Development",
            "--platform=Win64"
          ]
        },
        {
          "name": "Compile Win64 Client",
          "arguments": [
            "invoke",
            "unreal",
            "build",
            "--target=",
            "--configuration=Development",
            "--platform=Win64"
          ]
        }
      ]
    },
    {
      "name": "Clean",
      "steps": [
        {
          "name": "Generated files",
          "arguments": [
            "process_schema",
            "clean",
            ".spatialos",
            "Source/RpgDemo/Improbable/Generated"
          ]
        },
        {
          "name": "Worker packages",
          "arguments": [
          	"worker_package",
          	"clean"
          ]
        }
      ]
    }
  ]
}
