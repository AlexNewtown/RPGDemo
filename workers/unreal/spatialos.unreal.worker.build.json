{
  "tasks": [
    {
      "name": "Codegen",
      "steps": [
        {
          "name": "Dependencies",
          "arguments": [
            "worker_package",
            "unpack"
          ]
        },
        {
          "name": "Setup build script",
          "command": "cmd",
          "arguments": [
            "/c",
            "copy /y .\\Source\\unreal\\SpatialOS\\SpatialOSModule.Build.cs Source\\unreal"
          ]
        },
        {
          "name": "C# core library",
          "arguments": [
            "process_schema",
            "generate",
            "--cachePath=.spatialos/schema_codegen_cache_cl",
            "--output=Source/unreal/Improbable/Generated/cpp/CoreLibrary",
            "--language=cpp_unreal",
            "--input=../../build/dependencies/schema/CoreLibrary"
          ]
        },
        {
          "name": "C# standard library",
          "arguments": [
            "process_schema",
            "generate",
            "--cachePath=.spatialos/schema_codegen_cache_std",
            "--output=Source/unreal/Improbable/Generated/cpp/Std",
            "--language=cpp_unreal",
            "--input=../../build/dependencies/schema/WorkerSdkSchema"
          ]
        },
        {
          "name": "C#",
          "arguments": [
            "process_schema",
            "generate",
            "--cachePath=.spatialos/schema_codegen_cache_usr",
            "--output=Source/unreal/Improbable/Generated/cpp/Usr",
            "--language=cpp_unreal",
            "--input=../../schema"
          ]
        },
        {
          "name": "Json AST",
          "arguments": [
            "process_schema",
            "generate",
            "--cachePath=.spatialos/schema_codegen_cache_json_usr",
            "--output=Source/unreal/Improbable/Generated/json/Usr",
            "--language=ast_json",
            "--input=../../schema",
            "--repository=../../build/dependencies/schema"
          ]
        },
        {
          "name": "Unreal Code Generation",
          "description": "Generates Unreal classes.",
          "arguments": [
            "invoke",
            "unity-mono",
            ".spatialos/bin/CodeGenerator.exe",
            "--",
            "--json-dir=Source/unreal/Improbable/Generated/json/Usr",
            "--unreal-output-dir=Source/unreal/Improbable/Generated/cpp/unreal"
          ]
        }
      ]
    },
    {
      "name": "Build",
      "steps": [
        {
          "name": "Codegen",
          "arguments": [
            "invoke-task",
            "Codegen"
          ]
        },
        {
          "name": "Compile Editor",
          "arguments": [
            "invoke",
            "unreal",
            "build",
            "--target=Editor",
            "--configuration=Development",
            "--platform=Win64"
          ]
        },
        {
          "name": "Compile Win64 Server",
          "target": "development",
          "arguments": [
            "invoke",
            "unreal",
            "build",
            "--target=Server",
            "--configuration=Development",
            "--platform=Win64"
          ]
        }
      ]
    },
    {
      "name": "Clean",
      "steps": [
        {
          "name": "Generated files",
          "arguments": [
            "process_schema",
            "clean",
            ".spatialos",
            "Source/unreal/Improbable/Generated"
          ]
        }
      ]
    }
  ]
}
