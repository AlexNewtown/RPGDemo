{
  "tasks": [
    {
      "name": "Codegen",
      "steps": [
        {
          "name": "Install dependencies",
          "arguments": [
            "worker_package",
            "unpack-to",
            "unreal",
            "improbable_sdk_plugin",
            "Source/unreal/SpatialOS"
          ]
        },
        {
          "name": "Setup build script",
          "command": "cmd",
          "arguments": [
            "/c",
            "copy /y .\\Source\\unreal\\SpatialOS\\SpatialOSModule.Build.cs Source\\unreal"
          ]
        }
      ]
    },
    {
      "name": "Build",
      "steps": [
        {
          "name": "Codegen",
          "arguments": [
            "invoke-task",
            "Codegen"
          ]
        },
        {
          "name": "Compile Editor",
          "arguments": [
            "invoke",
            "unreal",
            "build",
            "--target=Editor",
            "--configuration=Development",
            "--platform=Win64"
          ]
        },
        {
          "name": "Compile Win64 Server",
          "target": "development",
          "arguments": [
            "invoke",
            "unreal",
            "build",
            "--target=",
            "--configuration=Development",
            "--platform=Win64"
          ]
        },
        {
          "name": "Compile Linux Server",
          "target": "production",
          "arguments": [
            "invoke",
            "unreal",
            "build",
            "--target=Server",
            "--configuration=Development",
            "--platform=Linux"
          ]
        }
      ]
    },
    {
      "name": "Clean",
      "steps": [
        {
          "name": "Clean"
        }
      ]
    }
  ]
}
