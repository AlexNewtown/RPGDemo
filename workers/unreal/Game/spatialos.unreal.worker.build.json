{
  "tasks": [
    {
      "name": "Codegen",
      "steps": [
        {
          "name": "Dependencies",
          "arguments": [
            "worker_package",
            "unpack-to",
            "unreal",
            "improbable_sdk_plugin",
            "Game/Source/RpgDemo/SpatialOS"
          ]
        },
        {
          "name": "Setup build script",
          "command": "cmd",
          "arguments": [
            "/c",
            "copy /y .\\Game\\Source\\RpgDemo\\SpatialOS\\SpatialOSModule.Build.cs Game\\Source\\RpgDemo"
          ]
        }
      ]
    },
    {
      "name": "Build",
      "steps": [
        {
          "name": "Codegen",
          "arguments": [
            "invoke-task",
            "Codegen"
          ]
        },
        {
          "name": "Compile Editor",
          "arguments": [
            "invoke",
            "unreal",
            "build",
            "--target=Editor",
            "--configuration=Development",
            "--platform=Win64",
            "--project=Game/RpgDemo.uproject"
          ]
        },
        {
          "name": "Compile Win64 Server",
          "target": "development",
          "arguments": [
            "invoke",
            "unreal",
            "build",
            "--target=Server",
            "--configuration=Development",
            "--platform=Win64",
            "--project=Game/RpgDemo.uproject"
          ]
        },
        {
          "name": "Compile Linux Server",
          "target": "production",
          "arguments": [
            "invoke",
            "unreal",
            "build",
            "--target=Server",
            "--configuration=Development",
            "--platform=Linux",
            "--project=Game/RpgDemo.uproject"
          ]
        }
      ]
    },
    {
      "name": "Clean",
      "steps": [
        {
          "name": "Generated files",
          "arguments": [
            "process_schema",
            "clean",
            "--cachePath=Game/Intermediate/Improbable",
            "Game/Intermediate/Improbable",
            "Game/Source/RpgDemo/Improbable",
            "Game/Source/RpgDemo/SpatialOs"
          ]
        }
      ]
    }
  ]
}
