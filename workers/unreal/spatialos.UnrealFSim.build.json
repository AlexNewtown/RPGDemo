{
  "tasks": [
    {
		"name": "Codegen",
		"steps": [
        {
			"name": "Install dependencies",
			"arguments": ["worker_package", "unpack"]
        }
      ]
    },
    {
      "name": "Build",
      "steps": [
        {
          "name": "Codegen",
          "arguments": [
            "invoke-task",
            "Codegen"
          ]
        },
        {
          "name": "Compile",
          "arguments": [
            "invoke",
            "unreal",
            "build"
          ]
        },
        {
          "name": "Build unreal workers",
          "command": "bash",
          "arguments": ["build_workers.sh"]
        }
      ]
    },
    {
      "name": "Clean",
      "steps": [
        {
          "name": "Dependencies",
          "arguments": [
            "worker_package",
            "clean"
          ]
        },
        {
          "name": "Unreal",
          "arguments": [
            "invoke",
            "unreal",
            "clean"
          ]
        },
        {
          "name": "Clean unreal workers",
          "command": "bash",
          "arguments": ["clean_workers.sh"]
        }
      ]
    }
  ]
}
